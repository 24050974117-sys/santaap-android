<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Ini adalah wadah untuk ikon dan latar belakangnya -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background_cat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/cat_0_background"> <!-- Latar belakang default -->

        <ImageView
            android:id="@+id/imgCat"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/btn_1" /> <!-- Ikon contoh -->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Ini adalah teks judul yang berada di luar dan di bawah wadah -->
    <TextView
        android:id="@+id/catNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Category"
        android:textAlignment="center"
        android:textColor="@color/blue_grey"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>

